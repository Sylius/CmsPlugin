<div>
    {% if media.link %}
        <a href="{{ media.link }}" target="_blank">
    {% endif %}
        {% set original_path = media.path|imagine_filter('sylius_original') %}
    <img src="{{ original_path }}" alt="{{ media.alt }}" class="img-fluid"
        {% if media.width is not null %} width="{{ media.width }}" {% endif %}
        {% if media.height is not null %} height="{{ media.height }}" {% endif %}
    />
    {% if media.link %}
        </a>
    {% endif %}

    {% if media.content %}
        {{ sylius_cms_render_content(media) }}
    {% endif %}
</div>

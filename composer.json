{
    "name": "sylius/cms-plugin",
    "type": "sylius-plugin",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "sylius-cms"
    ],
    "description": "CMS plugin for Sylius applications.",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "sylius/sylius": "^2.0",
        "league/csv": "^9.1",
        "friendsofsymfony/ckeditor-bundle": "^2.0",
        "friendsofsymfony/rest-bundle": "^3.8",
        "jms/serializer-bundle": "^5.5"
    },
    "require-dev": {
        "behat/behat": "^3.14",
        "behat/mink-selenium2-driver": "^1.7",
        "dbrekelmans/bdi": "^1.3",
        "dmore/behat-chrome-extension": "^1.4",
        "dmore/chrome-mink-driver": "^2.9",
        "doctrine/cache": "^2.2",
        "doctrine/data-fixtures": "^1.7",
        "friends-of-behat/mink": "^1.11",
        "friends-of-behat/mink-browserkit-driver": "^1.6",
        "friends-of-behat/mink-debug-extension": "^2.1",
        "friends-of-behat/mink-extension": "^2.7",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/symfony-extension": "^2.6",
        "friends-of-behat/variadic-extension": "^1.6",
        "lchrusciel/api-test-case": "^5.3",
        "matthiasnoback/symfony-config-test": "^5.1",
        "mockery/mockery": "^1.6",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpstan-doctrine": "^1.5",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpstan/phpstan-symfony": "^1.4",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "phpunit/phpunit": "^10.5",
        "psr/event-dispatcher": "^1.0",
        "robertfausk/behat-panther-extension": "^1.1",
        "sylius-labs/coding-standard": "^4.4",
        "sylius-labs/suite-tags-extension": "~0.2",
        "symfony/browser-kit": "^6.4 || ^7.1",
        "symfony/debug-bundle": "^6.4 || ^7.1",
        "symfony/dotenv": "^6.4 || ^7.1",
        "symfony/flex": "^2.4",
        "symfony/runtime": "^6.4 || ^7.1",
        "symfony/web-profiler-bundle": "^6.4 || ^7.1"
    },
    "suggest": {
        "stefandoorn/sitemap-plugin": "^2.2"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Sylius\\CmsPlugin\\": "src/",
            "Tests\\Sylius\\CmsPlugin\\": "tests/",
            "Tests\\Sylius\\CmsPlugin\\Unit\\": "tests/Unit"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Sylius\\CmsPlugin\\": "spec/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "php-http/discovery": false,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^7.1"
        },
        "runtime": {
            "project_dir": "tests/Application",
            "dotenv_path": "tests/Application/.env"
        }
    }
}
